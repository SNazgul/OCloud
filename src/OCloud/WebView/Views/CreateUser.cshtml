@page

@using OCloud.WebView.Views
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model CreateUserModel
@{
    ViewData["Title"] = "Create user";
}


<html>
<body>
    <p>
        Enter name and password for new user.
    </p>

    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div>
            <label asp-for="LoginInfo.UserName"></label>
            <input asp-for="LoginInfo.UserName" />
            <span asp-validation-for="LoginInfo.UserName"></span>
        </div>

        <div>
            <label asp-for="LoginInfo.Password"></label>
            <input asp-for="LoginInfo.Password" />
            <span asp-validation-for="LoginInfo.Password"></span>
        </div>

        <div>
            <label asp-for="LoginInfo.ConfirmPassword"></label>
            <input asp-for="LoginInfo.ConfirmPassword" />
            <span asp-validation-for="LoginInfo.ConfirmPassword"></span>
        </div>

        <div>
            <input type="checkbox" asp-for="LoginInfo.LoginAfterCreation" />
            <label asp-for="LoginInfo.LoginAfterCreation"></label>
        </div>

        <input type="submit" value="Login" />
    </form>
</body>
</html>